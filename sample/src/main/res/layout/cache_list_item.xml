<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1.0">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <!-- Client id-->
        <LinearLayout
            android:id="@+id/ll_row_clientid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="client_id:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_clientid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:text="value" />

        </LinearLayout>

        <!-- User identifier -->
        <LinearLayout
            android:id="@+id/ll_row_user_identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_identifier:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_user_identifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:text="value" />

        </LinearLayout>

        <!-- Displayable id -->
        <LinearLayout
            android:id="@+id/ll_row_displayable_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="displayable_id:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_displayable_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:text="value" />

        </LinearLayout>

        <!-- Scopes -->
        <LinearLayout
            android:id="@+id/ll_row_scopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scopes:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/values_scopes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="value" />

        </LinearLayout>

        <!-- Expires on -->
        <LinearLayout
            android:id="@+id/ll_row_expires_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expires_on:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_expires_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="value" />

        </LinearLayout>

        <!-- Host -->
        <LinearLayout
            android:id="@+id/ll_row_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="host:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/value_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="value" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/tv_atrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ACCESS TOKEN" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DELETE" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>